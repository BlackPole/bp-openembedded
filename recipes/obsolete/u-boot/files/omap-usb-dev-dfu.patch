+	return 0;
+}
+
+
+/* Count DFU capable devices within system */
+static int count_dfu_devices(struct dfu_if *dif)
+{
+	int num_found = 0;
+
+	iterate_dfu_devices(dif, count_one_dfu_device, &num_found);
+	return num_found;
