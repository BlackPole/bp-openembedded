+struct dfu_if {
+	u_int16_t vendor;
+	u_int16_t product;
+	u_int8_t configuration;
+	u_int8_t interface;
+	u_int8_t altsetting;
+	int bus;
+	u_int8_t devnum;
+	const char *path;
+	unsigned int flags;
