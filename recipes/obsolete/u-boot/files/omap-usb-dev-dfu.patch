+#define DFU_IFF_VENDOR		0x0100
+#define DFU_IFF_PRODUCT		0x0200
+#define DFU_IFF_CONFIG		0x0400
+#define DFU_IFF_IFACE		0x0800
+#define DFU_IFF_ALT		0x1000
+#define DFU_IFF_DEVNUM		0x2000
+#define DFU_IFF_PATH		0x4000
